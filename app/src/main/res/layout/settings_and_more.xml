<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCFDFE"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/details" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_your_number"
            android:padding="16dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_bg"
            android:textColorHint="@color/black"
            android:hint="The number registered in twilio" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_twilio_number"
            android:background="@drawable/rounded_bg"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="The number twilio gave you" />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_sid_number"
            android:textColor="@color/black"
            android:background="@drawable/rounded_bg"
            android:padding="16dp"
            android:textColorHint="@color/black"
            android:hint="Twilio SID number" />

        <EditText
            android:id="@+id/et_auth_token"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Twilio Auth Token"
            android:background="@drawable/rounded_bg"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="16dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:id="@+id/btn_save_values"
            android:layout_gravity="right"
            android:background="@color/blue"
            android:onClick="saveValues"
            android:text="Save"/>

        <TextView
            android:paddingTop="16dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_introduce"
            android:textColor="@color/black"
            android:text="@string/info"/>

        <Button
            android:padding="6dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="sendEmail"
            android:background="@color/blue"
            android:id="@+id/btn_send_email"
            android:text="Email Developer"/>


    </LinearLayout>

</ScrollView>